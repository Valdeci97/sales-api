generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String @id @default(uuid())
  name     String
  price    Float
  quantity Int

  @@map("products")
}

model User {
  id       String      @id @default(uuid())
  name     String
  email    String      @unique
  password String
  avatar   String?
  token    UserToken[]

  @@map("users")
}

model UserToken {
  id           String   @id @default(uuid())
  token        String   @default(uuid())
  user         User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id      String
  generated_at DateTime @default(now())

  @@map("user_tokens")
}

model Customer {
  id    String  @id @default(uuid())
  name  String
  email String  @unique
  order Order[]

  @@map("customers")
}

model Order {
  id          String   @id @default(uuid())
  customer    Customer @relation(fields: [customer_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
  customer_id String

  @@map("orders")
}
